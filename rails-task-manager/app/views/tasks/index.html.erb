<div class="main-wrapper text-center">
  <div class="heading-text">
    <h1>My Tasks</h1>
     <a href="/tasks/new"><button class="btn btn-primary">Add New Task</button>
  </div>

</div>
<div class="board">
  <div class="task-block">
    <div class="row">
      <% @tasks.each do |task| %>
      <div class="col-xs-3">
        <div class="col-content">
          <div class="pin">
          <img id="pin-pic" src="https://img.clipartfest.com/20a5716839beee2672bc348792c62be3_push-pin-vektor-clipart-pin-clipart-png_500-378.png" alt="">
          </div>
          <h2><%= task.name %></h2>
          <p><%= task.decription %></p>
          <%= link_to "View task", task_path(task), class: "btn btn-primary"%>
          <%= link_to "Delete this task", task_path(task), method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

